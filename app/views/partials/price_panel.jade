.panel(class="{{panelType}} panel-{{panelStyle}}")
  .cnrflash(ng-show="mostPopular")
    .cnrflash-inner
      span.cnrflash-label
        | MOST
        br
        | POPULAR
  .panel-heading
    h3.panel-title
      | {{panelType.capitalize()}}
  .panel-body
    .the-price
      h1
        | £{{model.serviceType.price.certificate}}
        span.subscript /cert
      small + £{{model.serviceType.price.apostille}}/apostille (optional)
    table.table
      tr
        td.feature
          | Dispatch in&nbsp;
          strong {{model.serviceType.dispatchTime}}&nbsp;
          | working day{{model.serviceType.dispatchTime > 1 ? 's' : ''}}
      tr.active
        td.feature
          | Free delivery
      tr
        td.feature
          | Support response in&nbsp;
          strong {{model.serviceType.supportResponseTime}}&nbsp;
          | hour{{model.serviceType.supportResponseTime > 1 ? 's' : ''}}
      tr.active
        td.feature
          | Email Tracking
      tr
        td.feature
          | {{trackingSms ? 'SMS Tracking' : '-'}}
      tr.active
        td.feature
          | {{scanAndEmail ? 'Scan and email documents' : '-'}}
      tr
        td
          .btn-group
            button.certificate.btn.btn-primary(type='button', ng-model='certificateType', btn-radio="'birth'") Birth
            button.certificate.btn.btn-primary(type='button', ng-model='certificateType', btn-radio="'marriage'") Marriage
            button.certificate.btn.btn-primary(type='button', ng-model='certificateType', btn-radio="'death'") Death

  .panel-footer
    a.apply-now.btn.btn-success(href='/certificate/{{certificateType}}/{{panelType}}', ng-disabled='!certificateType', role='button') Apply Now