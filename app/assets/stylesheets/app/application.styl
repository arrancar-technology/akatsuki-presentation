@import url('http://fonts.googleapis.com/css?family=Open+Sans:200,300,400,600');
html,
body
  height 100%
  width 100%
  font-family 'Open Sans','Helvetica Neue',Helvetica,Arial,sans-serif

.row
  margin 0
  padding 0

h1
  font-size 50px

.icon-bar
  background-color #fff

.scroll-down a, .scroll-top a
  color #ffffff

.scroll-down
  position fixed
  bottom 20%
  right 0%
  color #f9f9f9

.scroll-top
  background-color #0D448A

.header
  height 80%
  background #0D448A url('../../images/pt_squares_lg.png') repeat center center fixed
  .btn-lg
    font-size 28px
    border-color #eeeeee
    padding 15px
    background-color transparent
    color #ffffff
    &:hover
      background-color #eeeeee
      color #777777
  h1
    font-size 35px
    -webkit-text-stroke 1px rgba(0,0,0,0.1)
    color #431a6d
    color #fff
    margin 35px 0 5px -5px
    font-family 'Helvetica Neue',Helvetica,Arial,sans-serif
  .lead
    color #eeeeee

.navbar
  a
    color #fff

.navbar-bold
  background-color #0D448A
  font-family 'Helvetica Neue',Helvetica,Arial,sans-serif
  &.affix
    background-color #0D448A
  li
    a
      &:hover
        background-color #3598DB
    &.active
      background-color #3598DB

.vert
  vertical-align middle
  width 100%
  padding-top 4%

.blurb
  padding 30px 0
  background-color #fefefe
  .panel
    background-color transparent

.bright
  background #7fbbda url('http://www.bootply.com/assets/example/bg_suburb.jpg') no-repeat center center fixed
  color #fff

.featurette
  background #545455
  padding 50px 0
  color #ffffff

.featurette-item
  margin-bottom 15px
  & > i
    border 3px solid #ffffff
    border-radius 50%
    display inline-block
    font-size 56px
    width 140px
    height 140px
    line-height 136px
    vertical-align middle
    text-align center
    &:hover
      font-size 68px

.callout
  color #ffffff
  padding-top 7%
  height 100%
  width 100%
  background url('http://www.bootply.com/assets/example/bg_suburb.jpg') no-repeat center center fixed
  -webkit-background-size cover
  -moz-background-size cover
  -o-background-size cover
  background-size cover

.gallery
  padding 50px 0

.call-to-action
  background #eeeeee
  padding 50px 0
  .btn
    margin 10px

footer
  padding 100px 0

// Responsive Video
.video-container
  position relative
  padding-bottom 56.25%
  padding-top 30px
  height 0
  overflow hidden

.video-container iframe,
.video-container object,
.video-container embed
  position absolute
  top 0
  left 0
  width 100%
  height 100%

