.payment-details-container
  h4 Payment Details
  small.row.emailAddress
    .col-sm-6 Email Address
    .col-sm-6 : {{model.customer.emailAddress || '--' }}
  small.row.cardType
    .col-sm-6 Card Type
    .col-sm-6 : {{model.cardTypes[model.customer.card.type] || '--' }}
  small.row.cardholderName
    .col-sm-6 Cardholder Name
    .col-sm-6 : {{model.customer.card.holderName || '--' }}
  small.row.cardNumber
    .col-sm-6 Card Number
    .col-sm-6 : {{model.customer.card.number || '--' }}
  small.row.expiryDate
    .col-sm-6 Expiry Date
    .col-sm-6 : {{model.months[model.customer.card.expiryMonth] || '--' }} / {{model.customer.card.expiryYear || '--' }}
  small.row.cardVerificationNumber
    .col-sm-6 Card Verification (CVC)
    .col-sm-6 : {{model.customer.card.verificationNumber || '--' }}