extends ../layouts/admin
block content
  .blurb.row
    .col-xs-offset-0.col-xs-12.col-md-offset-4.col-md-4
      form.form-horizontal(role='form', action="/login/admin?redirectUrl=#{redirectUrl}", method="POST")
        .form-group
          label.col-sm-3.control-label(for='email') Email
          .col-sm-9
            input#email.form-control(type='email', name='email', placeholder='Email')
        .form-group
          label.col-sm-3.control-label(for='password') Password
          .col-sm-9
            input#password.form-control(type='password', name='password', placeholder='Password')
        .form-group
          .col-sm-offset-3.col-sm-9
            .checkbox
              label
                input(type='checkbox')
                | Remember me
        .form-group
          .col-sm-offset-3.col-sm-9
            button.btn.btn-default(type='submit') Sign in