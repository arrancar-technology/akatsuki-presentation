.order-summary-details-container
  .panel.panel-default
    .panel-heading
      h3.panel-title Order Summary
    .panel-body
      .certificate-details-container
        h4 Certificate Details
        small.row.dateOfMarriage
          .col-sm-6 Date of Marriage
          .col-sm-6 : {{model.order.certificate.day || '--' }} / {{model.months[model.order.certificate.month] || '--' }} / {{model.order.certificate.year || '--' }}
        small.row.placeOfMarriage
          .col-sm-6 Place of Marriage
          .col-sm-6 : {{model.order.certificate.place || '--' }}
        small.row.womanLastName
          .col-sm-6 Woman Last Name
          .col-sm-6 : {{model.order.certificate.woman.lastName || '--' }}
        small.row.womanFirstName
          .col-sm-6 Woman First Name
          .col-sm-6 : {{model.order.certificate.woman.firstName || '--' }}
        small.row.manLastName
          .col-sm-6 Man Last Name
          .col-sm-6 : {{model.order.certificate.man.lastName || '--' }}
        small.row.manFirstName
          .col-sm-6 Man First Name
          .col-sm-6 : {{model.order.certificate.man.firstName || '--' }}
        hr
        include ../templates/order_summary_service_type

        include ../templates/order_summary_additional
        include ../templates/order_summary_payment