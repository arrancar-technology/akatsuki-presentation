.modal.fade.bs-modal-lg(class="#{certificateType}", tabindex='-1', role='dialog', aria-labelledby='myLargeModalLabel', aria-hidden='true', style='display: none;')
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal', aria-hidden='true', ng-click='editableForm.$cancel()') Ã—
        h4(id="myLargeModalLabel").modal-title Order Details
      .modal-body
        editableForm = "editableForm" + certificateType
        form(editable-form, name= editableForm, onaftersave='saveOrder()', novalidate)
          .form-group.row
            label.col-sm-6.control-label(for="date-of-marriage") Date of Marriage
            .col-sm-6.date-of-marriage-container
              span.col-md-2(id="", editable-text='model.orderSelected.certificate.day', e-name='day', onbeforesave='', e-required) {{ model.orderSelected.certificate.day || '--' }} /&nbsp;
              span.col-md-2(id="", editable-text='model.orderSelected.certificate.month', e-name='month', onbeforesave='', e-required) {{ model.orderSelected.certificate.month || '--' }} /&nbsp;
              span.col-md-2(id="", editable-text='model.orderSelected.certificate.year', e-name='year', onbeforesave='', e-required) {{ model.orderSelected.certificate.year || '--' }}
          .form-group.row
            label.col-sm-6.control-label(for="place-of-marriage") Place of Marriage
            .col-sm-6
              span(id="place-of-marriage", editable-text='model.orderSelected.certificate.place', e-name="place-of-marriage", onbeforesave='', e-required) {{ model.orderSelected.certificate.place || '--' }}
          .form-group.row
            label.col-sm-6.control-label(for="woman-last-name") Woman's Last Name
            .col-sm-6
              span(id="woman-last-name", editable-text='model.orderSelected.certificate.woman.lastName', e-name="woman-last-name", onbeforesave='', e-required) {{ model.orderSelected.certificate.woman.lastName || '--' }}
          .form-group.row
            label.col-sm-6.control-label(for="woman-first-name") Woman's First Name
            .col-sm-6
              span(id="woman-first-name", editable-text='model.orderSelected.certificate.woman.firstName', e-name="woman-first-name", onbeforesave='', e-required) {{ model.orderSelected.certificate.woman.firstName || '--' }}
          .form-group.row
            label.col-sm-6.control-label(for="man-last-name") Man's Last Name
            .col-sm-6
              span(id="man-last-name", editable-text='model.orderSelected.certificate.man.lastName', e-name="man-last-name", onbeforesave='') {{ model.orderSelected.certificate.man.lastName || '--' }}
          .form-group.row
            label.col-sm-6.control-label(for="man-first-name") Man's First Name
            .col-sm-6
              span(id="man-first-name", editable-text='model.orderSelected.certificate.man.firstName', e-name="man-first-name", onbeforesave='') {{ model.orderSelected.certificate.man.firstName || '--' }}

          include ../admin/modal_edit_order_details_service
          include ../admin/modal_edit_order_details_address

          .row
            button.btn.btn-default.pull-right(type='button', ng-click="#{editableForm}.$show()", ng-show="!#{editableForm}.$visible")
              | Edit
            span(ng-show="#{editableForm}.$visible")
              button.btn.btn-primary(type='submit', ng-disabled="#{editableForm}.$waiting")
                | Save
              button.btn.btn-default(type='button', ng-disabled="#{editableForm}.$waiting", ng-click="#{editableForm}.$cancel()")
                | Cancel